<Window x:Class="Cursach.UserMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cursach"
        mc:Ignorable="d"
        Title="UserMenu"
        Height="320"
        Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Name="AdmiName"
                       Text="Студент"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="25"
                       FontSize="24"
                       TextWrapping="Wrap" />

            <Button Margin="15"
                    Name="UserList"
                    Click="ButtonUserList_Click"
                    Cursor="Hand">Список Учащихся</Button>
          
         
            <Button Margin="15"
                    Name="FindUser"
                    Click="ButtonFind_Click"
                    Cursor="Hand">Поиск</Button>
            <Button Margin="15"
                    Name="LessonsButton"
                    Click="ButtonLessons_Click"
                    Cursor="Hand">Выбор дисциплин</Button>
           
        </StackPanel>
    </Grid>
</Window>
